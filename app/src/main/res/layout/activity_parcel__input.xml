<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Parcel_Input">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"

        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Sender Details"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"

            android:gravity="center"
            android:textColor="#3F51B5"
            />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_person_black_24dp"


        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:hint="Enter name*"
        android:id="@+id/nameET"
        android:layout_marginTop="10dp"



        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_phone_android_black_24dp"

        android:hint="Mobile No.*"
        android:inputType="numberDecimal"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"

        android:id="@+id/mobileET"



        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Area*"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_place_black_24dp"
        android:id="@+id/areaET"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"

        android:drawableRight="@drawable/ic_account_balance_black_24dp"

        android:hint="Enter Address*"
        android:background="@drawable/backdesign"
        android:padding="8dp"

        android:id="@+id/addressET"
        />








        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="Choose Category"

            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3F51B5"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        >
        <Spinner

            android:layout_marginTop="2dp"
            android:layout_weight="1"



            android:entries="@array/weight_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"

            >

            <RadioButton
                android:text="Fraglie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd"
                />

            <RadioButton
                android:text="Liquid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1"
                />
        </RadioGroup>


    </LinearLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost: 0 BDT"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/bdt1"

        android:gravity="center"
      />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Receiver Details"

            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#3F51B5"
            />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person_black_24dp"

            android:background="@drawable/backdesign"
            android:padding="8dp"
            android:layout_marginTop="10dp"

        android:hint="Enter name*"
        android:id="@+id/nameETr"




        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Mobile No.*"
        android:drawableRight="@drawable/ic_phone_android_black_24dp"
        android:inputType="numberDecimal"
        android:id="@+id/mobileETr"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"



        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Area*"
        android:drawableRight="@drawable/ic_place_black_24dp"
        android:id="@+id/areadET"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Address*"
        android:drawableRight="@drawable/ic_account_balance_black_24dp"

        android:id="@+id/addressdET"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Instruction (optional)"

        android:id="@+id/instructionET"
        android:drawableRight="@drawable/ic_speaker_notes_black_24dp"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#4554A7"
            android:text="Place Order"
            android:textColor="#fefefe"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/entryBT"



            />

    </LinearLayout>

</ScrollView>