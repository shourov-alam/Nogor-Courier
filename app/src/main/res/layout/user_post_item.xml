<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"


    app:cardUseCompatPadding="true"










    android:layout_height="wrap_content">






  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"

      android:orientation="vertical"



    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5267F1"
        android:padding="8dp"
      >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:orientation="vertical"


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_id"
            android:textColor="#fefefe"
            android:textStyle="bold"

            android:textSize="20sp"
            android:text="demo"



            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:textColor="#fefefe"

            android:textSize="20sp"
            android:text="weight"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"

            android:textSize="20sp"
            android:textColor="#fefefe"
            android:text="status"
            />





      </LinearLayout>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/post_type"
          android:textSize="20sp"
          android:layout_alignParentRight="true"
          android:textColor="#fefefe"



          android:textStyle="bold"
          android:text="demo"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/date"
          android:layout_below="@+id/post_type"
          android:layout_alignParentRight="true"
          android:textColor="#fefefe"


          android:textSize="20sp"
          android:text="date"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/cost"
          android:layout_below="@+id/date"
          android:layout_alignParentRight="true"
          android:textColor="#fefefe"



          android:textSize="20sp"
          android:text="cost amount"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/condition"
          android:layout_alignParentRight="true"
          android:textColor="#fefefe"


          android:layout_below="@+id/cost"

          android:textSize="20sp"
          android:text="cod amount"
          />




    </RelativeLayout>







      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_marginTop="8dp"
          android:padding="6dp"
          android:gravity="center"
          android:text="Status"
          android:id="@+id/now"

          android:textSize="18sp"

          android:textColor="#F51607"


          />



 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"

     android:layout_marginTop="8dp"
     android:gravity="center"
     android:text="-----FROM-----"

     android:textSize="18sp"
     android:textStyle="bold"
     android:textColor="#3F51B5"


   />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_name"
        android:layout_marginLeft="7dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginTop="5dp"

        android:textSize="18sp"
        android:text="m_name"
        android:textColor="#000000"

        />
    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:id="@+id/phone"
        android:textColor="#000000"

        android:textSize="18sp"
        android:text="phone"
        />



    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:id="@+id/from"
        android:textColor="#000000"
        android:layout_marginTop="3dp"

        android:textSize="18sp"
        android:text="from"
        />

    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_account_balance_black_24dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="to"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="-----TO-----"
        android:textStyle="bold"
        android:textColor="#3F51B5"



        />

      <TextView
          android:id="@+id/rname"
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/to"
          android:layout_marginLeft="7dp"
          android:drawableLeft="@drawable/ic_person_black_24dp"
          android:text="rname"
          android:textColor="#000000"
          android:textSize="18sp" />

    <TextView
        android:layout_marginLeft="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rphone"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:textSize="18sp"
        android:text="rphone"
        android:textColor="#000000"
        />


      <TextView
          android:id="@+id/fromarea"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/rphone"
          android:layout_marginTop="3dp"

          android:drawableLeft="@drawable/ic_place_black_24dp"
          android:layout_marginLeft="7dp"
          android:text="fromarea"
          android:textColor="#000000"
          android:textSize="18sp" />

    <TextView
        android:id="@+id/toarea"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_account_balance_black_24dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="3dp"


        android:text="toarea"
        android:textSize="18sp" />





    <TextView
        android:layout_marginLeft="7dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instruction"
        android:textSize="18sp"
        android:text="instruction"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
        />
      <View
          android:layout_width="10dp"
          android:layout_height="10dp"
          />







  </LinearLayout>



</androidx.cardview.widget.CardView>