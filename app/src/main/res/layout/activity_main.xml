<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/topArea"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginTop="0dp"

                android:padding="10dp"

                android:background="@drawable/header"

                >




               <TextView
                   android:id="@+id/myDashboard"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:text="Nogor Courier"
                   android:layout_marginTop="0dp"


                   android:textStyle="bold"
                   android:textSize="30sp"

                   android:textColor="#fefefe"
                   />
               <TextView
                   android:id="@+id/dashboard_adminName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="The fastest courier in Dhaka"
                   android:textSize="20dp"

                   android:layout_below="@id/myDashboard"

                   android:layout_marginTop="10dp"
                   android:textStyle="italic"
                   android:textColor="#fefefe"
                   />

<!--
                <ImageView
                      android:layout_width="70dp"
                      android:layout_height="70dp"
                      android:layout_margin="10dp"
                      android:src="@drawable/profile"
                      android:layout_toRightOf="@id/myDashboard"
                      /> -->


            </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp"

        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="0dp"

            android:padding="10dp"


            >



                    <androidx.cardview.widget.CardView
                        android:id="@+id/parcel"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        android:layout_marginRight="20dp"


                        app:cardUseCompatPadding="true"















                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/header"
                            android:orientation="vertical"


                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/percel"
                                android:layout_gravity="center"

                                />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:text="Parcel Delivery "
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:textColor="#3F51B5"

                                android:textStyle="bold" />



                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cod"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        app:cardUseCompatPadding="true"






                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/header"
                            android:orientation="vertical"
                            android:gravity="center"

                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/cod"
                                android:layout_gravity="center_horizontal|center_vertical"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash On Delivery"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:textColor="#3F51B5"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/details"
                android:layout_width="100dp"
                android:layout_height="140dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="20dp"







                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/header"

                    android:gravity="center"




                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/perceldetails"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Parcel Details"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="#3F51B5"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"

            >


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="0dp"


            >



            <androidx.cardview.widget.CardView
                android:id="@+id/payment"
                android:layout_width="100dp"
                android:layout_height="140dp"

                android:layout_marginRight="20dp"
                app:cardUseCompatPadding="true"








                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/header"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/payment"
                        android:layout_gravity="center_horizontal|center_vertical"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Payment Method"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textColor="#3F51B5"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/notification"
                        android:layout_width="100dp"
                        android:layout_height="140dp"
                        app:cardUseCompatPadding="true"








                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/header"
                            android:gravity="center"
                            >

                            <ImageView

                                android:layout_width="92dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:background="@drawable/pro"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:textColor="#3F51B5"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/logout"
                        android:layout_width="100dp"
                        android:layout_height="140dp"

                        android:layout_marginLeft="20dp"
                        app:cardUseCompatPadding="true"




                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/header"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/logout"
                                android:layout_gravity="center_horizontal|center_vertical"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log Out"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"
                                android:textColor="#673AB7"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>

        </LinearLayout>



</ScrollView>