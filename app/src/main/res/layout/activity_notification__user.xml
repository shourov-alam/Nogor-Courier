<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:id="@+id/swipe"


    android:layout_height="match_parent"
    tools:context=".Activity.Notification_User">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

   <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

       >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile info"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"

            android:textColor="#111010"

            android:id="@+id/name"
            android:layout_marginTop="9dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"
            android:textColor="#111010"
            android:id="@+id/phone"
            android:layout_marginTop="7dp"
            />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"
            android:textColor="#111010"
            android:id="@+id/area"
            android:layout_marginTop="9dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/address"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bKash number"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#3F51B5"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/bkash1"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank account info"
            android:textSize="22dp"
            android:textColor="#3F51B5"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/bank_ac_name"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/bank_name"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/bank_branch"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/account_number"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/r_num"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/r_type"
            android:textSize="20dp"
            android:textColor="#111010"
            android:layout_marginTop="7dp"
            />







    </LinearLayout>
   </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/enters"
        android:layout_alignParentTop="true"

        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"


        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_24dp"



        />


    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>