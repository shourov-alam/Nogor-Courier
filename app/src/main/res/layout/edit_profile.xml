<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Enter name"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:hint="Enter phone"
        android:inputType="numberDecimal"
        android:drawableRight="@drawable/ic_phone_android_black_24dp"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/area"
        android:hint="Enter area"
        android:drawableRight="@drawable/ic_place_black_24dp"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="Enter address"
        android:drawableRight="@drawable/ic_account_balance_black_24dp"


        />



</LinearLayout>