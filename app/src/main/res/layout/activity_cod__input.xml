<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Cod_Input">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Sender Details"
        android:layout_marginTop="15dp"

        android:textSize="18sp"
        android:textStyle="bold"

        android:gravity="center"
        android:textColor="#4554A7"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:drawableRight="@drawable/ic_person_black_24dp"


        android:layout_marginTop="10dp"
        android:hint="Enter name*"
        android:id="@+id/nameET"



        />

    <EditText
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:drawableRight="@drawable/ic_phone_android_black_24dp"

        android:hint="Mobile No.*"
        android:id="@+id/mobileET"



        />
    <EditText
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_place_black_24dp"

        android:hint="Enter Area*"
        android:id="@+id/areaET"
        />

    <EditText
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_account_balance_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Address*"

        android:id="@+id/addressET"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="Choose Category"

        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#4554A7"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        >
        <Spinner
            android:layout_marginTop="2dp"
            android:layout_weight="1"

            android:entries="@array/weight_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"

            >

            <RadioButton
                android:text="Fraglie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd"
                />

            <RadioButton
                android:text="Liquid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1"
                />
        </RadioGroup>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cost: 0 BDT"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/bdt"

        android:gravity="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Receiver Details"

        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#4554A7"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:drawableRight="@drawable/ic_monetization_on_black_24dp"

        android:hint="Condition Amount*"
        android:id="@+id/conbdtET"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter name*"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/nameETr"



        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Mobile No.*"
        android:id="@+id/mobileETr"
        android:inputType="numberDecimal"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_phone_android_black_24dp"


        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Area*"
        android:id="@+id/areadET"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_place_black_24dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Address*"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_account_balance_black_24dp"

        android:id="@+id/addressdET"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Enter Instruction (optional)"

        android:id="@+id/instructionET"
        android:background="@drawable/backdesign"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_speaker_notes_black_24dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4554A7"
        android:text="Place Order"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/entryBT"

        />

</LinearLayout>

</ScrollView>