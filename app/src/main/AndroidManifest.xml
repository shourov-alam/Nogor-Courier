<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sh.nogorcourier">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.User_Posts"></activity>
        <activity android:name=".Activity.Notification_User" />
        <activity android:name=".Activity.Payment_Method" />
        <activity android:name=".Activity.Cod_Input" />
        <activity android:name=".Activity.Parcel_Input" />
        <activity android:name=".Activity.VerifyOtp" />
        <activity android:name=".Activity.LogInActivity" />
        <activity android:name=".Activity.Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>